@model List<LabTutor.Student>
@{int rowNo = 0;}

@{
    ViewBag.Title = "Allocation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="allocation_index">

    <!-- Page Title -->
    <h2 class="pageTitle">Allocation</h2>

    <!-- semester tabs -->
    <ul class="nav nav-tabs" style="margin-bottom: 15px;">
        <li class="active cursorPointer" data-toggle="tab" onclick="tabChange(1)"><a>Semester 1 </a></li>
        <li class="cursorPointer" data-toggle="tab" onclick="tabChange(2)"><a>Semester 2 </a></li>
    </ul>

    <!-- calendar -->
    <div id='calendar'></div>

    <!-- Legend -->
    <div class='legend row'>
        <div class="col-sm-6">
            <label><span class="orange"></span>Unallocated Labs</label>
        </div>
        <div class="col-sm-6">
            <label><span class="blue"></span>Allocated Labs</label>
        </div>
    </div>

    <!-- Operational buttons -->
    <div class="row operationalButtons">
        <button class="btn btn-default col-sm-2" onclick="location.href='@Url.Action("Edit", "Timetable")'">Edit Timetable</button>
        <button class="btn btn-default col-sm-2" onclick="location.href='@Url.Action("populateDatabase", "Allocate")'">Populate Datebase</button>
        <button class="btn btn-default col-sm-2" onclick="location.href='@Url.Action("Create", "Allocate")'">Create Allocation</button>
        <button class="btn btn-default col-sm-2" data-toggle="modal" data-target="#adjustWeightModal" onclick="getWeightModal()">Adjust Allocation Rules</button>
        <button class="btn btn-default col-sm-2" onclick="location.href='@Url.Action("Edit", "Allocate")'">Edit Allocation</button>
        <button class="btn btn-default col-sm-2" id="publishButton" value="Publish Allocation" onclick="location.href='@Url.Action("changePublishState", "Allocate")'">Publish Allocation</button>
    </div>

    <!-- Table (All Students) -->
    <table id="myTable" class="table table-hover table-bordered table-responsive">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Degree</th>
                <th>Year</th>
                <th>Max Hours</th>
                <th name="test">Working Hours(S1)</th>
                <th>Working Hours(S2)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            if (item.workingHour1 == 0 && item.workingHour2 == 0)
            {
            @:<tr class="danger cursorPointer" data-toggle="modal" data-target="#studentDetailModal" onclick="passStudentId(@item.studentId)">
                    }
            else
            {
            @:<tr id="tutor_@item.studentId" class="cursorPointer" data-toggle="modal" data-target="#studentDetailModal" onclick="passStudentId(@item.studentId)">
                    }

            <td>@(rowNo += 1)</td>
            <td>@item.fName @item.lName</td>
            <td>@item.degree</td>
            <td>@item.year</td>
            <td>@item.maxHour</td>
            <td>@item.workingHour1</td>
            <td>@item.workingHour2</td>

            @:</tr>
                }
        </tbody>
    </table>


    <!-- student detail Modal -->
    <div class="modal fade" id="studentDetailModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Degree: </label>
                                <degree></degree>
                            </div>
                            <div class="form-group">
                                <label>Year: </label>
                                <year></year>
                            </div>
                            <div class="form-group">
                                <label>Max Working Hour: </label>
                                <maxhour></maxhour>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Matriculation Number: </label>
                                <matricnumber></matricnumber>
                            </div>
                            <div class="form-group">
                                <label>NI Number: </label>
                                <ni></ni>
                            </div>
                            <div class="form-group">
                                <label>Payment Rate: </label>
                                <paymentrate></paymentrate>
                            </div>
                        </div>

                        <div class="form-group" id="liked">
                            <label class="col-sm-4">Favoured modules: </label>
                            <liked></liked>
                        </div>
                        <div class="form-group" id="disliked">
                            <label class="col-sm-4">Unfavoured modules: </label>
                            <disliked></disliked>
                        </div>
                    </div>

                    <div class="row">
                        <table class="table table-hover table-responsive modalTable">
                            <thead>
                                <tr>
                                    <th>Year</th>
                                    <th>Degree</th>
                                    <th>Module</th>
                                    <th>Semester</th>
                                    <th>Time</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- adjust allocation weight Modal -->
    <div class="modal fade" id="adjustWeightModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <form role="form" class="form-horizontal">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Adjust Weight in Allocation Algorithm</h4>
                    </div>

                    <div class="modal-body">
                        <div class="form-group row">
                            <label class="col-sm-offset-1 col-sm-4 col-form-label">Preference: </label>
                            <div class="col-sm-6">
                                <input type="number" min="1" class="form-control" id="prefWeight" placeholder="Preference Weight" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-offset-1 col-sm-4 col-form-label">One-Year-Approach: </label>
                            <div class="col-sm-6">
                                <input type="number" min="1" class="form-control" id="yearWeight" placeholder="One-Year-Approach Weight" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-offset-1 col-sm-4 col-form-label">Individual Student: </label>
                            <div class="col-sm-6">
                                <input type="number" min="1" class="form-control" id="stuWeight" placeholder="Individual Student Weight" required>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-default" id="save_weight">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>

@section Scripts {
    <script src="~/Scripts/CustomJS/Allocate_Index.js"></script>
}
