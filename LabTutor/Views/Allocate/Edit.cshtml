@{
    ViewBag.Title = "Edit Allocation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="allocation_index">

    <!-- Page Title -->
    <h2 class="pageTitle">Edit Allocation</h2>

    <!-- semester tabs -->
    <ul class="nav nav-tabs" style="margin-bottom: 15px;">
        <li class="active cursorPointer" data-toggle="tab" onclick="allocate_edit_tabChange(1)"><a>Semester 1 </a></li>
        <li class="cursorPointer" data-toggle="tab" onclick="allocate_edit_tabChange(2)"><a>Semester 2 </a></li>
    </ul>

    <!-- calendar -->
    <div id='calendar'></div>

    <!-- Legend -->
    <div class='legend row color_box'>
        <div class="col-sm-6">
            <label><span class="orange"></span>Unallocated Labs</label>
        </div>
        <div class="col-sm-6">
            <label><span class="blue"></span>Allocated Labs</label>
        </div>
    </div>

    <!-- Operational buttons -->
    <div class="row operationalButtons">
        <button class="btn btn-default left" onclick="location.href='@Url.Action("Index", "Allocate")'">Go back</button>
    </div>


    <!-- Edit tutors Modal -->
    <div class="modal fade" id="edit_tutors_modal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <form role="form" class="form-horizontal" id="allocation_edit_form">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>
                        <classid hidden></classid>
                    </div>

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label class="col-sm-7">Degree: </label>
                                    <degree></degree>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label class="col-sm-6">Year: </label>
                                    <year></year>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-3">Time: </label>
                                    <time></time>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3"><tutornumber>2</tutornumber> tutor(s) needed: </label>
                            <div class="col-sm-8">
                                <select class="form-control" name="tutors" multiple="multiple" id="multiselect"></select>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-default" id="save_multiselectlist">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>

@section Scripts {
    <script>
        scriptEvents.Allocate_Edit();
    </script>

}
