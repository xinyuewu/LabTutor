@{
    ViewBag.Title = "Edit Allocation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="allocation_index">

    <!-- Page Title -->
    <h2 class="pageTitle">Edit Allocation</h2>

    <!-- semester tabs -->
    <ul class="nav nav-tabs" style="margin-bottom: 15px;">
        <li class="active cursorPointer" data-toggle="tab" onclick="tabChange(1)"><a>Semester 1 </a></li>
        <li class="cursorPointer" data-toggle="tab" onclick="tabChange(2)"><a>Semester 2 </a></li>
    </ul>

    <!-- calendar -->
    <div id='calendar'></div>

    <!-- Legend -->
    <div class='legend row'>
        <div class="col-sm-6">
            <label><span class="orange"></span>Unallocated Labs</label>
        </div>
        <div class="col-sm-6">
            <label><span class="blue"></span>Allocated Labs</label>
        </div>
    </div>

    <!-- Operational buttons -->
    <div class="row operationalButtons">
        <button class="btn btn-default left" onclick="location.href='@Url.Action("Index", "Allocate")'">Go back</button>
    </div>


    <!-- Adjust Allocation Modal -->
    <div class="modal fade" id="adjustAllocationModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="col-sm-9">Degree: </label>
                                <degree></degree>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="col-sm-7">Year: </label>
                                <year></year>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-3">Time: </label>
                                <time></time>
                            </div>
                        </div>
                    </div>
                    <br />
                    <form role="form" class="form-horizontal">
                        <div class="form-group row">
                            <label class="col-sm-2 control-label">Tutors: </label>
                            <div class="col-sm-8 col-sm-offset-1">
                                <select class="form-control" multiple="multiple" id="multiselect">
                                </select>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-default">Save</button>
                </div>

            </div>
        </div>
    </div>


</div>

@section Scripts {
    <script src="~/Scripts/CustomJS/Allocate_Edit.js"></script>
}
