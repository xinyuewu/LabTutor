
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title -->
<h2 class="pageTitle">Allocation</h2>

<ul class="nav nav-tabs published" style="margin-bottom: 15px;" hidden>
    <li class="active cursorPointer" data-toggle="tab" onclick="lecturer_index_tabChange(1)"><a>Semester 1 </a></li>
    <li class="cursorPointer" data-toggle="tab" onclick="lecturer_index_tabChange(2)"><a>Semester 2 </a></li>
</ul>

<div id='calendar'></div>

<!-- Legend -->
<div class='legend row color_box published' hidden>
    <label class="pull-left"><span class="orange"></span>My Classes</label>
</div>

<!-- class detail Modal -->
<div class="modal fade" id="classDetailModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Degree: </label>
                            <degree></degree>
                        </div>
                        <div class="form-group">
                            <label>Year: </label>
                            <year></year>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="form-group">
                            <label>Semester: </label>
                            <semester></semester>
                        </div>
                        <div class="form-group">
                            <label>Time: </label>
                            <time></time>
                        </div>
                    </div>                 
                </div>

                <div class="row">
                    <table class="table table-hover table-responsive modalTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Matriculation No.</th>
                                <th>Degree</th>
                                <th>Year</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Operational buttons -->
<div class="row operationalButtons">
    <button class="btn btn-default col-sm-2 published pull-right" data-toggle="modal" data-target="#rest_password_modal">Reset password</button>
</div>

<!-- Reset password Modal -->
<div class="modal fade" id="rest_password_modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form" class="form-horizontal" id="reset_password_form" data-toggle="validator">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Reset password</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-sm-offset-1 col-sm-4 col-form-label">Current password: </label>
                        <div class="col-sm-6">
                            <input name="old_password" type="password" class="form-control" id="old_password" placeholder="Old password">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-offset-1 col-sm-4 col-form-label">New password: </label>
                        <div class="col-sm-6">
                            <input name="new_password" type="password" class="form-control" id="new_password" placeholder="New password">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-offset-1 col-sm-4 col-form-label">Confirm new password: </label>
                        <div class="col-sm-6">
                            <input name="confirm_password" type="password" class="form-control" id="confirm_password" placeholder="Confirm new password">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-default" id="reset_password">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        scriptEvents.Lecturer_Index();
    </script>
}
