@model List<LabTutor.Models.LecturerModel>
@{int rowNo = 0;}
@{
    ViewBag.Title = "Lecturers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title -->
<h2 class="pageTitle">Manage Lecturer Accounts</h2>

<!-- Table (All Students) -->
<table id="myTable" class="table table-hover table-bordered table-responsive">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Modules</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(rowNo += 1)</td>
                <td>@item.fName @item.lName</td>
                <td>@item.email</td>
                <td>
                    @foreach (var module in item.moduleList)
                    {
                        @:<p>@module.name</p>
                    }
                </td>
                <td>
                    <button class="btn btn-default edit_lecturer" data-toggle="modal" data-target="#lecturerModal" onclick="passStudentId(@item.lecturerId)">Edit</button>
                    <button class="btn btn-default" data-toggle="modal" data-target="#deleteLecturerModal" onclick="passLecturerId(@item.lecturerId)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Operational buttons -->
<div class="row operationalButtons">
    <button type="button" class="btn btn-default left" onclick="location.href='@Url.Action("Index", "Allocate")'">Go back</button>
    <button type="button" class="btn btn-primary right" id="add_lecturer" data-toggle="modal" data-target="#lecturerModal">Add New Lecturer</button>
</div>



<!-- Add/Edit Lecturer Modal -->
<div class="modal fade" id="lecturerModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form" class="form-horizontal">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add/Edit Lecturer</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-sm-offset-1 col-sm-3 col-form-label">First Name: </label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="prefWeight" placeholder="First Name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-offset-1 col-sm-3 col-form-label">Last Name: </label>
                        <div class="col-sm-7">
                            <input type="text"class="form-control" id="prefWeight" placeholder="Last Name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-offset-1 col-sm-3 col-form-label">Email: </label>
                        <div class="col-sm-7">
                            <input type="email" class="form-control" id="yearWeight" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-offset-1 col-sm-3 col-form-label">Modules: </label>
                        <div class="col-sm-7">
                            <select class="form-control" name="modules" multiple="multiple" id="multiselect" required></select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-default" id="save_weight">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteLecturerModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure you wish to delete this lecturer?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="deleteLecturer">Delete</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/CustomJS/Lecturer_Read.js"></script>
}
