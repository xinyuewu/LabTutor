<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Lab Tutor System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/fullcalendar-2.7.2/fullcalendar.print.css" rel="stylesheet" media="print" />
    @Styles.Render("~/fullcalendar/css")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @if (Session["userId"] == null)
                {
                    <img class="navbar-brand cursorPointer" src="~/Content/Image/uod.png" onclick="location.href = '@Url.Action("Index", "Home")'" />
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand">Lab Tutor System</a>
                }
                else
                {
                    <img class="navbar-brand cursorPointer" src="~/Content/Image/uod.png" onclick="location.href='@Url.Action("LoggedIn", "Account")'" />
                    <a href="@Url.Action("LoggedIn", "Account")" class="navbar-brand">Lab Tutor System</a>
                }

            </div>
            <div class="navbar-collapse collapse">
                @if (Session["userId"] != null)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()

                        <ul class="nav navbar-nav navbar-right">
                            <li><p>Hello @Session["name"] !</p></li>
                            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
                        </ul>
                    }
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a class="cursorPointer js-register-link" data-toggle="modal" data-target="#login-modal">Register</a></li>
                        <li><a class="cursorPointer js-login-link" data-toggle="modal" data-target="#login-modal">Log in</a></li>
                    </ul>
                }
            </div>
        </div>
    </div>

    <!-- Login/Register modal -->
    <div class="modal fade" id="login-modal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header" id="login-modal-tabs">
                    <ul class="nav nav-tabs nav-justified">
                        <li class="active"><a data-toggle="tab" href="#login" id="js-login-tab">Log in</a></li>
                        <li><a data-toggle="tab" href="#register" id="js-register-tab">Register</a></li>
                    </ul>
                </div>

                <div class="modal-body">
                    <div class="tab-content">

                        <!-- login-form -->
                        <div id="login" class="tab-pane fade in active">
                            <form class="form-horizontal" role="form" data-toggle="validator" action="Account/Login" id="login-form">                                                         
                                
                                <!-- email-->
                                <div class="form-group">
                                    <label class="col-md-3 col-md-offset-1 control-label">Uni Email</label>
                                    <div class="col-md-7 input-field">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                            <input name="email" placeholder="*@("@")dundee.ac.uk" class="form-control" type="email">
                                        </div>
                                    </div>
                                </div>
                                <!-- password-->
                                <div class="form-group">
                                    <label class="col-md-3 col-md-offset-1 control-label">Password</label>
                                    <div class="col-md-7 input-field">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                            <input name="password" placeholder="Password" class="form-control" type="password">
                                        </div>
                                    </div>
                                </div>
                                <!-- error message -->
                                <div class="error_message alert alert-danger col-md-10 col-md-offset-1" role="alert" id="login_error">Invalid email or password!</div>
                                <!-- cancel/submit-->
                                <div class="bottom-buttons">
                                    <button type="button" class="btn btn-default cancel-button" data-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-default submit-button">Submit</button>
                                </div>
                            </form>
                        </div>


                        <!-- register-form -->
                        <div id="register" class="tab-pane fade">
                            <form class="form-horizontal" role="form" data-toggle="validator" action="Account/Register" id="register-form">
                                <!-- email-->
                                <div class="form-group">
                                    <label class="col-md-3 col-md-offset-1 control-label">Uni Email</label>
                                    <div class="col-md-7 input-field">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                            <input name="email" placeholder="*@("@")dundee.ac.uk" class="form-control" type="email">
                                        </div>
                                    </div>
                                </div>
                                <!-- password-->
                                <div class="form-group">
                                    <label class="col-md-3 col-md-offset-1 control-label">Password</label>
                                    <div class="col-md-7 input-field">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                            <input name="password" placeholder="Password" class="form-control" type="password">
                                        </div>
                                    </div>                               
                                </div>
                                <!-- first name-->
                                <div class="form-group">
                                    <label class="col-md-3 col-md-offset-1 control-label">First Name</label>
                                    <div class="col-md-7 input-field">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                            <input name="first_name" placeholder="First Name" class="form-control" type="text">
                                        </div>
                                    </div>                                   
                                </div>
                                <!-- last name-->
                                <div class="form-group">
                                    <label class="col-md-3 col-md-offset-1 control-label">Last Name</label>
                                    <div class="col-md-7 input-field">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                            <input name="last_name" placeholder="Last Name" class="form-control" type="text">
                                        </div>
                                    </div>                                   
                                </div>
                                <!-- matric number-->
                                <div class="form-group">
                                    <label class="col-md-3 col-md-offset-1 control-label">Uni ID</label>
                                    <div class="col-md-7 input-field">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-universal-access"></i></span>
                                            <input name="matric_number" placeholder="Matriculation Number" class="form-control" type="text">
                                        </div>
                                    </div>                                   
                                </div>
                                <!-- year-->
                                <div class="form-group">
                                    <label class="col-md-3 col-md-offset-1 control-label" id="degree-label">Degree</label>
                                    <div class="col-md-8 input-field">
                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="degree" value="CS"/>Computing Science
                                            </label>
                                        </div>
                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="degree" value="AC"/>Applied Computing
                                            </label>
                                        </div>
                                    </div>                          
                                </div>
                                <!-- level-->
                                <div class="form-group">
                                    <label class="col-md-3 col-md-offset-1 control-label">Level</label>
                                    <div class="col-md-7 input-field">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-list-ul"></i></span>
                                            <select name="level" class="form-control selectpicker">
                                                <option value=" "></option>
                                                <option value="2">Year 2</option>
                                                <option value="3">Year 3</option>
                                                <option value="4">Year 4</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!-- error message -->
                                <div class="error_message alert alert-danger col-md-10 col-md-offset-1" role="alert" id="register_error">An account for this email/matriculation number already exists!</div>


                                <div class="bottom-buttons">
                                    <button type="button" class="btn btn-default cancel-button" data-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-default submit-button">Submit</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>


    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; 2016 - Xinyue Wu</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/fullcalendar/script")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
